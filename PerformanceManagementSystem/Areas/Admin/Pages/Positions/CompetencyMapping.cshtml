@page
@model PerformanceManagementSystem.Areas.Admin.Pages.Positions.CompetencyMappingModel

@{
    ViewData["Title"] = "ویرایش";
}

<h1>ویرایش</h1>

<h4>مقام</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetencyCategoryPositionMapping.PositionId" />
            <input type="hidden" asp-for="OrganizationId" />
            <div class="form-group">
                <label asp-for="CompetencyCategoryPositionMapping.CompetencyCategoryIds" class="control-label"></label>
                <select asp-for="CompetencyCategoryPositionMapping.CompetencyCategoryIds" multiple class="form-control" asp-items="ViewBag.CompetencyCategories"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-organizationId="@Model.OrganizationId">بازگشت به لیست</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
