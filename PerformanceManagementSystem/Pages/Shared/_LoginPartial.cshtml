@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PerformanceManagementSystem.Data.Models
@inject SignInManager<AppUser> SignInManager
@* @inject UserManager<AppUser> UserManager *@

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <p class="nav-link text-dark">@User.Claims.FirstOrDefault(a=>a.Type == ClaimTypes.GivenName)?.Value</p>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link btn btn-link text-dark">خروج</button>
        </form>
    </li>
}
else
{
    @* <li class="nav-item"> *@
    @*     <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">ثبت نام</a> *@
    @* </li> *@
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">ورود</a>
    </li>
}
</ul>
